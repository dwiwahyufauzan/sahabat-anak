{
  "name": "sahabat-anak-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Yayasan Sahabat Anak - Full Stack Application",
  "scripts": {
    "start": "cd backend && bun run start",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build:frontend": "cd frontend && bun run build",
    "migrate": "cd backend && bun run db:migrate"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
